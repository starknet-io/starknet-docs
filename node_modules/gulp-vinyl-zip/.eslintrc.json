{
	"extends": "standard",
	"rules": {
		"indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
		"no-tabs": "off",
		"semi": ["error", "always"],
		"space-before-function-paren": ["error", {
			"anonymous": "always",
			"named": "never",
			"asyncArrow": "always"
		}],
		"spaced-comment": "off"
	}
}
